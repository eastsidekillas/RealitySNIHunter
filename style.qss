/* RealitySNIHunter v0.2.3 Styles */

/* Основные цвета */
QWidget {
    background-color: #2b2b2b;
    color: #e0e0e0;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 9pt;
}

/* Главное окно */
QMainWindow {
    background-color: #1e1e1e;
}

/* Вкладки */
QTabWidget::pane {
    border: 1px solid #3c3c3c;
    background-color: #2b2b2b;
}

QTabBar::tab {
    background-color: #3c3c3c;
    color: #e0e0e0;
    padding: 8px 16px;
    border: 1px solid #3c3c3c;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #2b2b2b;
    border-color: #32a8a0;
}

QTabBar::tab:hover {
    background-color: #404040;
}

/* Группы */
QGroupBox {
    background-color: #2b2b2b;
    border: 1px solid #3c3c3c;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 16px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #32a8a0;
}

/* Поля ввода */
QLineEdit, QTextEdit, QSpinBox {
    background-color: #1e1e1e;
    border: 1px solid #3c3c3c;
    border-radius: 4px;
    padding: 6px;
    color: #e0e0e0;
    selection-background-color: #32a8a0;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus {
    border: 1px solid #32a8a0;
}

QLineEdit:disabled, QTextEdit:disabled, QSpinBox:disabled {
    background-color: #252525;
    color: #6c6c6c;
}

/* Кнопки */
QPushButton {
    background-color: #32a8a0;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #2d9589;
}

QPushButton:pressed {
    background-color: #288278;
}

QPushButton:disabled {
    background-color: #3c3c3c;
    color: #6c6c6c;
}

/* Чекбоксы - ИСПРАВЛЕНО */
QCheckBox {
    spacing: 8px;
    color: #e0e0e0;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #3c3c3c;
    border-radius: 3px;
    background-color: #1e1e1e;
}

QCheckBox::indicator:hover {
    border-color: #32a8a0;
}

